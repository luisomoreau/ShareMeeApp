<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1">

    <ScrollView
        android:id="@+id/scrollViewUserProfile"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/profil"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true" />

            <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/login_form"
                android:layout_margin="10dp">

                <LinearLayout android:id="@+id/plus_sign_out_buttons"
                    android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:visibility="gone" android:weightSum="2">

                    <Button android:id="@+id/plus_disconnect_button"
                        style="?android:textAppearanceSmall" android:layout_width="match_parent"
                        android:layout_height="match_parent" android:layout_weight="1"
                        android:text="@string/plus_disconnect" />

                    <Button android:id="@+id/plus_sign_out_button" style="?android:textAppearanceSmall"
                        android:layout_width="match_parent" android:layout_height="match_parent"
                        android:layout_weight="1" android:text="@string/plus_sign_out" />

                </LinearLayout>

                <LinearLayout android:id="@+id/email_login_form"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <AutoCompleteTextView android:id="@+id/modify_user_profile_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/modify_profile_user_name"
                        android:inputType="text"
                        android:maxLines="1"
                        android:singleLine="true" />

                    <AutoCompleteTextView android:id="@+id/modify_user_profile_surname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/modify_profile_user_surname"
                        android:inputType="text"
                        android:maxLines="1"
                        android:singleLine="true" />

                    <AutoCompleteTextView android:id="@+id/modify_user_profile_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/modify_profile_user_email"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:singleLine="true" />

                    <AutoCompleteTextView android:id="@+id/modify_user_profile_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/modify_profile_user_password"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:singleLine="true" />

                    <AutoCompleteTextView android:id="@+id/modify_user_profile_reenter_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/modify_profile_user_reenter_password"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:singleLine="true" />

                    <Button android:id="@+id/email_sign_in_button"
                        style="?android:textAppearanceSmall"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/modify"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"
                        android:clickable="true" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>



