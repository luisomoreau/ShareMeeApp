<?xml version="1.0" encoding="utf-8"?>
<!-- Layout général pour la page de présentation d'un objet -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<!-- Permet d'afficher le nom de l'objet-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/objectName"
            android:id="@+id/objectName"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            style="@style/TextAppearance.AppCompat.Headline" />
    <!-- Permet de créer une galerie de photos del'objet si il y en a plusieurs-->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/scrollPhotoObject"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
             >

            <LinearLayout
                android:id="@+id/objectPhoto_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="vertical" />

            </HorizontalScrollView>

    <!-- Carte qui va êtrele support de l'item Contact-->
    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:clickable="false"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!-- Contact-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/contactObject"
                android:text="@string/contact"
                />

        </LinearLayout>
    </android.support.v7.widget.CardView>
    <!--Permet d'afficher toutes les caractéristiques de l'objet avec un layout pour chaque item  -->
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@android:id/list"
        android:layout_gravity="center_horizontal"
        />

</LinearLayout>

</FrameLayout>



